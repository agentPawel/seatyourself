<h1>Reservation Details</h1>
<br><br>
<span class="res_details">Restaurant: <%= session[:restaurant_name] %></span> <br><br>
<span class="res_details">Date: <%= session[:current_res_date] %></span> <br><br>
<span class="res_details">Time: <%= session[:current_res_time] %>:00</span><br><br>
<span class="res_details">Party Size: <%= pluralize(session[:party_size], 'person') %></span><br>

<%= form_for @reservation do |f| %>
  <% if @reservation.errors.any? %>
    <div class="error_messages">
      <br>
      <h4>Reservation not confirmed because:</h4>
      <ul>
        <% @reservation.errors.full_messages.each do |message| %>
        <br>

          - <%= message %>
        <% end %>
      </ul>
    </div>
  <% end %>
<br><br>
 <div class="field" id="email_conf">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

 <div class="field" id="name_conf">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

<br>
 <div class="actions"><%= f.submit %></div>
<% end %>
