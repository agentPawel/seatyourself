<h1>Reservations#new</h1>

<h2>Reservation Req. Details </h2>
Date: <%= session[:current_res_date] %> <br>
Time:<%= session[:current_res_time] %><br>
Party Size:<%= session[:party_size] %><br>


<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

 <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>


 <div class="actions"><%= f.submit %></div>
<% end %>
